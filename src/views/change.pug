extends base

block content
    .wrapper
        .join
            form.join__inner(method="POST")
                input.join__inner__input(type="password", placeholder="현재 비밀번호", name="oldPassword", required )
                input.join__inner__input(type="password", placeholder="새로운 비밀번호", name="newPassword", required)
                input.join__inner__input(type="password", placeholder="새로운 비밀번호 확인", name="newPasswordConfirm" required)
                input.join__inner__submit(type="submit", value="SUBMIT")