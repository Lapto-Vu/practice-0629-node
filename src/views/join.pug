extends base

block content
    .wrapper
        .join
            form.join__inner(method="POST")
                input.join__inner__input(type="email", placeholder="EMAIL", name="email", required)
                input.join__inner__input(type="text", placeholder="USERNAME", name="username", required)
                input.join__inner__input(type="password", placeholder="PASSWORD", name="password", required)
                input.join__inner__input(type="password", placeholder="PASSWORD CONFIRM", name="passwordConfirm", required)
                input.join__inner__submit(type="submit", value="SUBMIT")